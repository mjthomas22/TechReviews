@model TechReviews.Models.Review

@{
    ViewBag.Title = "Details";
}

<h2>Review</h2>

@*Organized Layout for Details*@

<div>
    <h4>Details</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="panel panel-default  panel--styled">
                    <div class="panel-body">
                        <div class="col-md-12 panelTop">
                            <div class="col-md-4">
                                <img class="img-responsive" id="stars" src=@Html.DisplayFor(model => model.ProductImg) />
                                <h5>@Html.DisplayFor(model => model.Category.Type)</h5>
                                <h5>Price: <span class="itemPrice">$@Html.DisplayFor(model => model.Price)</span></h5>
                                <h5>Budget: @Html.DisplayFor(model => model.Budget)</h5>
                                <h5>Rating: @Html.DisplayFor(model => model.Rating)</h5>

                                @*if statement to see what the rating was entered as and display the amount of stars earned*@
                                <h5>
                                    @{
                                        if (Model.Rating >= 8)
                                        {
                                            <img class="stars" src="/Images/Stars/fiveStar.png" />
                                        }
                                        else if (Model.Rating >= 6)
                                        {
                                            <img class="stars" src="/Images/Stars/fourStar.png" />
                                        }
                                        else if (Model.Rating >= 4)
                                        {
                                            <img class="stars" src="/Images/Stars/threeStar.png" />
                                        }
                                        else if (Model.Rating >= 2)
                                        {
                                            <img class="stars" src="/Images/Stars/twoStar.png" />
                                        }
                                        else
                                        {
                                            <img class="stars" src="/Images/Stars/oneStar.png" />
                                        }
                                    }
                                </h5>
                                <h5>@Html.DisplayFor(model => model.PublishDate)</h5>
                            </div>
                            <div class="col-md-8">
                                <h4>@Html.DisplayFor(model => model.Title)</h4>
                                <p id="descript">@Html.DisplayFor(model => model.Content)</p>
                            </div>
                        </div>

                        <div class="col-md-12 panelBottom">
                            <div class="col-md-4 text-center">
                                <a class="btn btn-lg btn-default" href="@Url.Action("Index", "Reviews")">Go Back &raquo;</a>
                            </div>
                            <div class="col-md-4 text-left">

                            </div>
                            <div class="col-md-4">
                                <div class="stars">
                                    <div id="stars" class="starrr"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


